<% include ../partials/header %>

    <title>Author Listing -- Galvanize Reads</title>

    <% include ../partials/navbar %>
        <div class="container">
            <h3>Authors</h3>
            <div class="row">



                <% if(data === undefined || data.length < 1){ %>
                    <h4>No authors yet!</h4>
                    <a class="waves-effect waves-light btn-large orange" href="/author/add"><i class="material-icons left">perm_identity</i>Add an Author</a>
                    <%} else { %>
                        <div id="authorsList">
                        <h5 id="authorCount"> </h5>
                        <div class="container">
                        <form class="col s12">
                            <div class="input-field">
                                <input id="authorSearch" type="search" required>
                                <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                                <i class="material-icons" id="clearAuthorSearch">close</i>
                            </div>
                        </form>
                        </div>
                        <ul class="list">
                        <% for(let i = 0; i < data.length; i++){ %>
                            <li><div class="col s12 m8 offset-m2 l6 offset-l3">
                                <a href="/author/<%=data[i].id%>"><div class="card-panel grey lighten-5 z-depth-1">
                                    <div class="row valign-wrapper">
                                        <div class="col s3">
                                            <img src="<%=data[i].portrait_url%>" alt="" class="circle responsive-img">

                                        </div>
                                        <div class="col s7">
                                            <h5><span class="name"><%=data[i].first_name%> <%=data[i].last_name%></span></h5>
                                        </div>
                                    </div>
                                </div></a>
                            </div></li>
                            <%} %>
                            </ul>

                            <ul class="pagination"></ul>
                        
                            </div>
                            <%} %>
                                    <!-- END ELSE -->


            </div>
        </div>


        <% include ../partials/footer %>

            <!--Import jQuery before materialize.js-->
            <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
            <script type="text/javascript" src="/js/materialize.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.5.0/list.min.js"></script>
            <script type="text/javascript" src="/js/authorList.js"></script>
</body>

</html>
